@model StalkerApplication.Equipment

@{
    ViewData["Title"] = "Create";
}

<h1>Додавання нового костюма до категорії @ViewBag.EqName</h1>

<h4>Equipment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EqName" class="control-label"></label>
                <input asp-for="EqName" class="form-control" />
                <span asp-validation-for="EqName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EqTe" class="control-label"></label>
                <select asp-for="EqTe" class="form-control" asp-items="ViewBag.EqTe"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
